{
    "manifest_version": 3,
    "name": "Amazon Pay History Fetcher",
    "version": "1.0",
    "description": "Fetch Amazon Pay History automatically.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "192": "icon192.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "32": "icon32.png",
            "192": "icon192.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.amazon.in/pay/history"
            ],
            "js": [
                "browser-polyfill.js",
                "apayin.js"
            ]
        }
    ]
}